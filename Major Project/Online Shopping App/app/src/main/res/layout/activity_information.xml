<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Information">

    <TextView
        android:background="#FF229C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Account Information"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/n_name"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinkesh Nandesh"
        android:textColor="#D11DBF"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView

        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6378697483"
        android:textColor="#D11DBF"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/e_email"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinkeshnandesh@gmail.com"
        android:textColor="#D11DBF"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avenue 2nd Street NW SY."
        android:textColor="#D11DBF"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOB : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01-12-2002"
        android:textColor="#D11DBF"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/back"
        android:background="#FF229C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Back to Home"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        />
</LinearLayout>